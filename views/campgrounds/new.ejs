<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Name of Campground</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        &#128077;
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        &#128077;
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add Photos</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" required>
                    <div class="valid-feedback">
                        &#128077;
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="5"
                        required></textarea>
                    <div class="valid-feedback">
                        &#128077;
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" placeholder="0.00" id="price" class="form-control" required
                            aria-describedby="price-label" name="campground[price]">
                        <div class="valid-feedback">
                            &#128077;
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
                <a class="btn btn-danger" href="/campgrounds">Cancel</a>
            </form>
        </div>
    </div>